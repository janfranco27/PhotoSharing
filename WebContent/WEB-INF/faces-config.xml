<?xml version="1.0" encoding="UTF-8"?>
<faces-config
    xmlns="http://xmlns.jcp.org/xml/ns/javaee"
    xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
    xsi:schemaLocation="http://xmlns.jcp.org/xml/ns/javaee http://xmlns.jcp.org/xml/ns/javaee/web-facesconfig_2_2.xsd"
    version="2.2">
    
    <application>
          <locale-config>
     	        <default-locale>es</default-locale>
     	        <supported-locale>en</supported-locale>
     	   </locale-config>
     	   	   <resource-bundle>
			<base-name>com.unsa.PhotoSharing.Controller.messages_en</base-name>
			<var>msg</var>
	   		</resource-bundle>
    </application>
    
	<managed-bean>
		<managed-bean-name>loginBeanController</managed-bean-name>
		<managed-bean-class>com.unsa.PhotoSharing.Controller.LoginBeanController</managed-bean-class>
		<managed-bean-scope>session</managed-bean-scope>
	</managed-bean>
	<managed-bean>
		<managed-bean-name>newUserBeanController</managed-bean-name>
		<managed-bean-class>com.unsa.PhotoSharing.Controller.NewUserBeanController</managed-bean-class>
		<managed-bean-scope>session</managed-bean-scope>
	</managed-bean>
	<managed-bean>
		<managed-bean-name>idiomaBean</managed-bean-name>
		<managed-bean-class>com.unsa.PhotoSharing.Controller.IdiomaBean</managed-bean-class>
		<managed-bean-scope>session</managed-bean-scope>
	</managed-bean>
	<managed-bean>
		<managed-bean-name>languageBean</managed-bean-name>
		<managed-bean-class>com.unsa.PhotoSharing.Controller.LanguageBean</managed-bean-class>
		<managed-bean-scope>session</managed-bean-scope>
	</managed-bean>
	<navigation-rule>
		<display-name>index</display-name>
		<from-view-id>/index.jsp</from-view-id>
		<navigation-case>
			<from-outcome>login</from-outcome>
			<to-view-id>/home.jsp</to-view-id>
		</navigation-case>
	</navigation-rule>
	<navigation-rule>
		<display-name>index</display-name>
		<from-view-id>/index.jsp</from-view-id>
		<navigation-case>
			<from-outcome>registro</from-outcome>
			<to-view-id>/registroSuccess.jsp</to-view-id>
		</navigation-case>
	</navigation-rule>
	<navigation-rule>
		<display-name>index</display-name>
		<from-view-id>/index.jsp</from-view-id>
		<navigation-case>
			<from-outcome>errorlogin</from-outcome>
			<to-view-id>/loginFallo.jsp</to-view-id>
		</navigation-case>
	</navigation-rule>
	<navigation-rule>
		<display-name>index</display-name>
		<from-view-id>/index.jsp</from-view-id>
		<navigation-case>
			<from-outcome>registrofailed</from-outcome>
			<to-view-id>/registroFailed.jsp</to-view-id>
		</navigation-case>
	</navigation-rule>
	<validator>
		<display-name>Validate Password</display-name>
		<validator-id>com.unsa.PhotoSharing.Controller.validatePassword</validator-id>
		<validator-class>com.unsa.PhotoSharing.Controller.validatePassword</validator-class>
	</validator>

</faces-config>
